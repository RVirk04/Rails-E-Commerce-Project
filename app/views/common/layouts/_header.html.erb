<!-- Navigation -->
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand">
        <%= link_to image_tag("logo.png", size:"54x50", alt: "logo"), root_path %>
        <%= link_to "VIRK", root_path, class:"navbar-item" %>
      </div>
    </div>
    <ul class="nav navbar-nav navbar-left">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "NEW IN", newin_path %></li>
        <li><%= link_to "MEN", men_path %></li>
        <li><%= link_to "WOMEN", women_path %></li>
        <li><%= link_to "KIDS", kids_path %></li>
        <li><%= link_to "ACCESSORIES", accessories_path %></li>
        <li><%= link_to "CONTACT", contact_path %></li>
        <li><%= link_to "ABOUT", about_path %></li>
    </ul>
    <!-- Search Bar -->
    <%= form_tag(newin_path, :method => "get", id: "search-form", class:"navbar-form navbar-left") do %>
      <div class="input-group" id="adv-search">
        <%= text_field_tag :keyword, params[:keyword], placeholder: "Search..." , class: "form-control" %>
        <%= select_tag :search_category, options_from_collection_for_select(Category.all, "id", "name"), :include_blank => 'All', class: "form dropdown-toggle" %>
        <div class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-default") do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </div>
      </div>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <!-- Users -->
      <% if logged_in? %>
        <li>
          <%= link_to users_path do %>
            <i class="fa fa-users"></i>
              Users
            <span class="badge ">
              <i id="total_cart_items_badge">(<%= User.count %>)</i>
            </span>
          <% end %>
        </li>

        <!-- Cart -->
        <li>
          <%= link_to cart_path(@current_cart) do %>
            My Cart
            <span class="badge ">
              <i class="fa fa-cart-plus" style="color:#FFD700; font-size:20px"></i>
              <i id="total_cart_items_badge">(<%= @current_cart.line_items.count %>)</i>
            </span>
          <% end %>
        </li>

        <!-- Orders -->
        <li>
          <%= link_to orders_path do %>
            My Orders
            <span class="badge ">
              <i class="fa fa-shopping-basket" style="color:#FFD700; font-size:20px"></i>
              <%if @current_user.admin? %>
                (<%= @current_user.orders.count %>) Admin / (<%= Order.count%>) Total
              <% else %>
                <%= @current_user.orders.count %>
              <% end %>
            </span>
          <% end %>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for @current_user, size: 20 %>
              Account
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <div class="navbar-content">
                <div class="row">
                  <div class="col-md-5">
                    <!-- <img src="http://placehold.it/120x120" alt="Alternate Text" class="img-responsive"/> -->
                    <%= gravatar_for @current_user, size: 120 %>
                    <p class="text-center small">
                      <%= link_to edit_user_path(current_user) do %>
                        <i class="glyphicon glyphicon-picture"></i>
                        Change Photo
                      <% end %>
                    </p>
                  </div>
                  <div class="col-md-7">
                    <span>
                      <%= @current_user.name %>
                    </span>
                    <p class="text-muted small">
                      <%= @current_user.email %>
                    </p>
                    <div class="divider"></div>
                    <%= link_to current_user , class: "btn btn-primary btn-sm active" do %>
                      <i class="glyphicon glyphicon-eye-open"></i>
                      View Profile
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="navbar-footer">
                <div class="navbar-footer-content">
                  <div class="row">
                    <div class="col-md-6">
                      <%= link_to edit_user_path(current_user), class:"btn btn-default btn-sm" do %>
                        <i class="glyphicon glyphicon-cog"></i>
                        Change Password
                      <% end %>
                    </div>
                    <div class="col-md-6">
                      <%= link_to logout_path,class: "btn btn-default btn-sm pull-right", method: :delete do %>
                        <i class="glyphicon glyphicon-off"></i>
                        Sign out
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </li>
      <% else %>
        <!-- Sign Up -->
        <li>
          <%= link_to login_path do %>
            <i class="glyphicon glyphicon-user"></i>
            SIGN UP
          <% end %>
        </li>
        <!-- Sign In -->
        <li>
          <%= link_to login_path do %>
            <i class="glyphicon glyphicon-log-out"></i>
            SIGN IN
          <% end %>
        </li>
      <% end %>
    </ul>
</nav>
